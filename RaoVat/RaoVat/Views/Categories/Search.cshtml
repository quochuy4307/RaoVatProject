                        </div>
                    </div>
                }

            </section>
            Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/ @Model.PageCount
            <div class="MenuPage">
                @Html.PagedListPager(Model, page => Url.Action("Search", new { page = page }))
            </div>
        </div>
    </div>
</div>