@model RaoVat.Models.USER

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Quên Mật Khẩu</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/loginassets/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/loginassets/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="limiter">
        <div class="container-login100" style="background-color:powderblue;">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-165 p-b-54">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-49">
                        Quên Mật Khẩu
                    </span>


                    <div class="wrap-input100 validate-input m-b-23" data-validate="Email is required">
                        <span class="label-input100">Email</span>
                        @Html.TextBox("EmailID", "", new { @class = "input100" })
                        <span class="focus-input100" data-symbol="&#xf15a;"></span>
                    </div>

                    <div class="alert" role="alert">
                        <p class="alert-primary mb-0 text-center">
                            @ViewBag.Message
                        </p>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" type="submit">
                                Xác Nhận
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>



        <div id="dropDownSelect1"></div>
    }

    <!--===============================================================================================-->
    <script src="~/Content/loginassets/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/loginassets/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/loginassets/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/loginassets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/loginassets/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/loginassets/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/loginassets/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/loginassets/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/loginassets/js/main.js"></script>

</body>
</html>
