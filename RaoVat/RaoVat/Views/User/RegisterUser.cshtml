<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V13</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/registeruserassets/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/registeruserassets/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #999999;">
    @using (Html.BeginForm("RegisterUser", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="limiter">
            <div class="container-login100">
                <div class="login100-more" style="background-image: url('../Content/registeruserassets/images/hero-bg.jpg');"></div>

                <div class="wrap-login100 p-l-50 p-r-50 p-t-172 p-b-50">
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-59">
                            Đăng Ký
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Username is required">
                            <span class="label-input100">Tên người dùng</span>
                            <input class="input100" type="text" name="username" placeholder="Tên người dùng...">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Name is required">
                            <span class="label-input100">Họ tên</span>
                            <input class="input100" type="text" name="name" placeholder="Họ tên...">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Valid phone is required: 090****938">
                            <span class="label-input100">Số điện thoại</span>
                            <input class="input100" type="number" name="phone" placeholder="Số điện thoại...">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <span class="label-input100">Email</span>
                            <input class="input100" type="email" name="email" placeholder="Địa chỉ email...">
                            <span class="focus-input100"></span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            <span class="label-input100">Mật khẩu</span>
                            <input class="input100" type="password" name="pass" placeholder="*************">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Repeat Password is required">
                            <span class="label-input100">Nhập lại mật khẩu</span>
                            <input class="input100" type="password" name="repeat-pass" placeholder="*************">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-m w-full p-b-33">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    <span class="txt1">
                                        Tôi đồng ý với
                                        <a href="#" class="txt2 hov1">
                                            Các Điều Khoản Sử Dụng
                                        </a>
                                    </span>
                                </label>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn" type="submit">
                                    Đăng Ký
                                </button>
                            </div>

                            <a href="/User/Index" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                                Đăng nhập
                                <i class="fa fa-long-arrow-right m-l-5"></i>
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/vendor/jquery/jquery-3.2.1.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/vendor/animsition/js/animsition.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/vendor/bootstrap/js/popper.js"></script>
        <script src="~/Content/registeruserassets/vendor/bootstrap/js/bootstrap.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/vendor/select2/select2.min.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/vendor/daterangepicker/moment.min.js"></script>
        <script src="~/Content/registeruserassets/vendor/daterangepicker/daterangepicker.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/vendor/countdowntime/countdowntime.js"></script>
        <!--===============================================================================================-->
        <script src="~/Content/registeruserassets/js/main.js"></script>

    </body>
</html>